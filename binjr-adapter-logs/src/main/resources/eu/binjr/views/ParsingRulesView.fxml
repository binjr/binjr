<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" prefHeight="500.0" prefWidth="900.0" styleClass="skinnable-pane-border, tool-dialog-window" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.binjr.sources.logs.controllers.ParsingRulesController">
    <children>
      <VBox fx:id="expressions" layoutX="14.0" layoutY="64.0" spacing="10.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="64.0">
         <children>
            <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="5.0">
               <children>
                    <Label prefWidth="140.0" text="Timestamp Expression:" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="timeRegexField" prefHeight="25.0" prefWidth="322.0" HBox.hgrow="SOMETIMES" />
                    <Button fx:id="verifyTimeRegexButton" contentDisplay="GRAPHIC_ONLY" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" styleClass="dialog-button" text="Check">
                        <graphic>
                            <Region>
                                <styleClass>
                                    <String fx:value="icon-container" />
                                    <String fx:value="tick-icon" />
                                </styleClass>
                            </Region>
                        </graphic>
                        <tooltip>
                            <Tooltip showDelay="500ms" text="New log parsing profile" />
                        </tooltip>
                    </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                    <Label prefWidth="140.0" text="Serverity Expression:" />
                    <TextField fx:id="severityRegexField" prefHeight="25.0" prefWidth="325.0" HBox.hgrow="ALWAYS" />
                    <Button fx:id="verifySeverityRegexButton" contentDisplay="GRAPHIC_ONLY" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" styleClass="dialog-button" text="Check">
                        <graphic>
                            <Region styleClass="tick-icon" />
                        </graphic>
                        <tooltip>
                            <Tooltip showDelay="500ms" text="New log parsing profile" />
                        </tooltip>
                    </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <Label prefWidth="140.0" text="Message Expression:" />
                  <TextField fx:id="messageRegexField" prefHeight="25.0" prefWidth="325.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="verifyMessageRegexButton" contentDisplay="GRAPHIC_ONLY" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" styleClass="dialog-button" text="Check">
                     <graphic>
                        <Region styleClass="tick-icon" />
                     </graphic>
                     <tooltip>
                        <Tooltip showDelay="500ms" text="New log parsing profile" />
                     </tooltip>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                    <Label prefWidth="140.0" text="Whole Line Expression:" />
                    <TextField fx:id="lineRegexField" prefHeight="25.0" prefWidth="325.0" HBox.hgrow="ALWAYS" />
                    <Button fx:id="verifyLineRegexButton" contentDisplay="GRAPHIC_ONLY" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" styleClass="dialog-button" text="Check">
                        <graphic>
                            <Region styleClass="tick-icon" />
                        </graphic>
                        <tooltip>
                            <Tooltip showDelay="500ms" text="Verify Expression" />
                        </tooltip>
                    </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="14.0" layoutY="205.0" spacing="10.0" AnchorPane.bottomAnchor="61.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="205.0">
         <children>
      
              <Label text="Test:" />
              <TextArea fx:id="testTextArea" prefHeight="174.0" prefWidth="872.0" />
            <HBox fx:id="labels" spacing="5.0">
               <children>
                    <Label style="-fx-background-color: #eab141; -fx-padding: 3;" text="Time" />
                    <Label style="-fx-background-color: #35cf81; -fx-padding: 3;" text="Severity" />
                    <Label style="-fx-background-color: #4fdee3; -fx-padding: 3;" text="Message" />
               </children>
            </HBox>
         </children>
      </VBox>
        <HBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="14.0" spacing="2.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
            <children>
                <ComboBox fx:id="profileComboBox" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </ComboBox>

                <Button fx:id="importProfileButton" cache="true" contentDisplay="GRAPHIC_ONLY" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" styleClass="dialog-button" text="Import" HBox.hgrow="NEVER">
                    <graphic>
                        <Region>
                            <styleClass>
                                <String fx:value="icon-container" />
                                <String fx:value="upload-icon" />
                            </styleClass>
                        </Region>
                    </graphic>
                    <tooltip>
                        <Tooltip showDelay="500ms" text="Import log parsing profile" />
                    </tooltip>
                </Button>
                <Button fx:id="exportProfileButton" contentDisplay="GRAPHIC_ONLY" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" styleClass="dialog-button" text="Export" HBox.hgrow="NEVER">
                    <graphic>
                        <Region>
                            <styleClass>
                                <String fx:value="icon-container" />
                                <String fx:value="download-icon" />
                            </styleClass>
                        </Region>
                    </graphic>
                    <tooltip>
                        <Tooltip showDelay="500ms" text="Export log parsing profile" />
                    </tooltip>
                </Button>
                <Button fx:id="deleteProfileButton" contentDisplay="GRAPHIC_ONLY" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" styleClass="dialog-button" text="Delete" HBox.hgrow="NEVER">
                    <graphic>
                        <Region>
                            <styleClass>
                                <String fx:value="icon-container" />
                                <String fx:value="trash-icon" />
                            </styleClass>
                        </Region>
                    </graphic>
                    <tooltip>
                        <Tooltip showDelay="500ms" text="Delete log parsing profile" />
                    </tooltip>
                </Button>
            </children>
        </HBox>
      <HBox layoutX="726.0" layoutY="461.0" spacing="10.0" AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="14.0">
         <children>
              <Button fx:id="okButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="75.0" text="OK"
              onAction="#handleOnOk"/>
              <Button fx:id="cancelButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="75.0" text="Cancel"   onAction="#handleOnCancel"/>
         </children>
      </HBox>
    </children>
</AnchorPane>
