<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.ToggleSwitch?>
<?import eu.binjr.common.javafx.controls.LabelWithInlineHelp?>
<AnchorPane fx:id="root" focusTraversable="true" prefWidth="200" styleClass="skinnable-pane-border"
            xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <Button fx:id="closeButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" prefHeight="30.0" prefWidth="30.0"
            styleClass="exit" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
        <graphic>
            <Region styleClass="cross-icon"/>
        </graphic>
    </Button>
    <Label layoutX="100.0" layoutY="12.0" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0"
           styleClass="pane-title" text="Chart Properties" AnchorPane.leftAnchor="2.0" AnchorPane.topAnchor="5.0">
        <font>
            <Font size="16.0"/>
        </font>
        <padding>
            <Insets left="5.0"/>
        </padding>
    </Label>
    <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="25.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="35.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>

        <VBox spacing="10.0">
            <VBox>
                <children>
                    <ChoiceBox fx:id="chartTypeChoice" prefHeight="25.0" prefWidth="256.0"/>
                </children>
            </VBox>
            <LabelWithInlineHelp fx:id="durationUnitLabel" text="Duration unit:"
                                 inlineHelp="The temporal unit used to encode durations for a series of events"/>
            <ChoiceBox fx:id="durationUnitChoiceBox"
                       maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <LabelWithInlineHelp fx:id="showAreaOutlineLabel" text="Show outline"
                                 inlineHelp="Check this option if you want this chart to display a brighter coloured outline for each series."/>
            <VBox fillWidth="false">
                <ToggleSwitch fx:id="showAreaOutline" prefWidth="1.0">
                </ToggleSwitch>
            </VBox>
            <LabelWithInlineHelp fx:id="strokeWidthLabel" text="Stroke width"
                                 inlineHelp="The width for the outlines/scatter points on this chart."/>
            <VBox>
                <HBox alignment="CENTER_LEFT">
                    <Slider fx:id="strokeWidthSlider" blockIncrement="0.5" majorTickUnit="10.0" max="10.0" min="0.0"
                            minorTickCount="10" value="1.0"/>
                    <Label fx:id="strokeWidthText" text="1.0"/>
                </HBox>
            </VBox>
            <LabelWithInlineHelp fx:id="graphOpacityLabel" text="Area opacity"
                                 inlineHelp="The opacity of the area of series plotted on this chart."/>
            <VBox>
                <HBox alignment="CENTER_LEFT">
                    <Slider fx:id="graphOpacitySlider" blockIncrement="0.1" max="1.0" min="0"/>
                    <Label fx:id="opacityText" text="100%"/>
                </HBox>
            </VBox>
            <Separator prefWidth="200.0"/>
            <LabelWithInlineHelp text="Show timeline as:"
                                 inlineHelp="Show values on the time axis either as dates and times or as the elapsed duration since the beginning of the current year (e.g. Jan 1st at 00:00:00.000)"/>
            <ChoiceBox fx:id="timelineModeChoiceBox"
                       maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <Separator prefWidth="200.0"/>
            <LabelWithInlineHelp text="Auto scale Y axis"
                                 inlineHelp="Check this option if you want the scale of the Y axis to adjust automatically based on the minimum and maximum values currently plotted.&#xd;Uncheck it  if you want the Y axis to be fixed and adjust the scale manually using the fields below."/>
            <VBox fillWidth="false">
                <ToggleSwitch fx:id="autoScaleYAxis" prefWidth="1.0"/>
            </VBox>
            <HBox fx:id="yAxisScaleSettings" alignment="CENTER_LEFT">
                <VBox spacing="10">
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Label text="Min:" HBox.hgrow="ALWAYS" minWidth="40" maxWidth="Infinity"/>
                        <TextField fx:id="yMinRange" HBox.hgrow="SOMETIMES">
                            <tooltip>
                                <Tooltip showDelay="500ms" text="Lower bound for the Y axis"/>
                            </tooltip>
                        </TextField>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Label text="Max:" HBox.hgrow="ALWAYS" minWidth="40" maxWidth="Infinity"/>
                        <TextField fx:id="yMaxRange"
                                   HBox.hgrow="SOMETIMES">
                            <tooltip>
                                <Tooltip showDelay="500ms" text="Upper bound for the Y axis"/>
                            </tooltip>
                        </TextField>
                    </HBox>
                    <HBox.margin>
                        <Insets right="1"/>
                    </HBox.margin>
                </VBox>
            </HBox>
            <LabelWithInlineHelp fx:id="keepZeroLabel" text="Always keep 0 in range"
                                 inlineHelp="Check this option if you want to always keep the origin within range on the Y axis when it is adjusted automatically."/>
            <VBox fillWidth="false">
                <ToggleSwitch fx:id="alwaysIncludeOriginInAutoScale" prefWidth="1.0"/>
            </VBox>
            <Separator prefWidth="200.0"/>
            <LabelWithInlineHelp text="Minimum chart height"
                                 inlineHelp="This is the minimum height charts in this worksheet will be sized down to before a vertical scroll bar appears."/>
            <VBox>
                <HBox alignment="CENTER_LEFT">
                    <Slider fx:id="minChartHeightSlider" blockIncrement="1" max="500" min="80"/>
                    <Label fx:id="minChartHeightText" text="150"/>
                </HBox>
            </VBox>
        </VBox>

    </ScrollPane>
    <Separator orientation="VERTICAL"/>
</AnchorPane>
