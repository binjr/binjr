<Configuration status="WARN">
    <CustomLevels>
        <CustomLevel name="PROFILE" intLevel="450" />
    </CustomLevels>
    <Properties>
        <Property name="filename">binjr.log</Property>
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{YYYY-MM-dd HH:mm:ss.SSS}] [%-5level] [%t] [%logger{36}] %msg%n" charset="UTF-8"/>
        </Console>
        <!--<TextFlowAppender name="InternalConsole">-->
        <!--<PatternLayout pattern="[%d{YYYY-MM-dd HH:mm:ss.SSS}] [%-5level] [%t] [%logger{36}] %msg%n" charset="UTF-8"/>-->
        <!--</TextFlowAppender>-->
        <!--<File name="File" fileName="${filename}">-->
        <!--<PatternLayout pattern="[%d{YYYY-MM-dd HH:mm:ss.SSS}] [%-5level] [%t] [%logger{36}] %msg%n" charset="UTF-8"/>-->
        <!--</File>-->
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="STDOUT"/>
            <!--<AppenderRef ref="InternalConsole"/>-->
            <!--<AppenderRef ref="File"/>-->
        </Root>
    </Loggers>
</Configuration>